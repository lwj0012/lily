<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list" >
    <TextView 
        android:id="@+id/favorboard_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/favorboard_item_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="3dp" />
    <TextView
        android:id="@+id/favorboard_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/favorboard_item_id"
        android:singleLine="false"
        android:layout_marginRight="2dp"
        android:layout_marginTop="3dp" />
    <TextView 
        android:id="@+id/favorboard_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/favorboard_item_id"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="3dp" />
    <TextView 
        android:id="@+id/favorboard_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="3dp"
		android:layout_alignTop="@+id/favorboard_item_author" />
    <TextView 
        android:id="@+id/favorboard_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_alignBottom="@+id/favorboard_item_author"
		android:layout_alignTop="@+id/favorboard_item_author"
		android:layout_toRightOf="@+id/favorboard_item_author"
		android:layout_toLeftOf="@+id/favorboard_item_info" />
</RelativeLayout>